<h1>All Users</h1>

<p>
  <%= link_to 'New User', new_user_path %>
</p>

<table>
  <tr>
    <th>ID</th>
    <th>Fullname</th>
    <th>Handle</th>
    <th>Email</th>
    <th>Hosted Events</th>
    <th colspan="3"></th>
  </tr>
  
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.fullname %></td>
      <td><%= user.handle %></td>
      <td><%= user.email %></td>
      <td><center><%= user.events.count %></center></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user), method: :delete,
      data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>