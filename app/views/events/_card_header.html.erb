<div class="row text-muted">
  <div class="col-xs-8">
    <div class="row">
      <div class="col-xs-12 event-card-details">
        <h1><%= event.activity %></h1>
        <p>
          <%= display_datetime event.datetime %><br>
          <%= event.location %>
        </p>
        <% if show_link %>
          <%= link_to 'View Details', event_path(event), class: 'btn btn-primary', role: 'button' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-xs-4">
    <%= render 'users/avatar', user: event.user %>
  </div>
</div>