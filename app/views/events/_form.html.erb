<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation" %>
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited 
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :activity %><br>
    <%= f.text_field :activity %>
  </p>
  
  <p>
    <%= f.label :datetime %><br>
    <%= f.datetime_select :datetime %>
  </p>
  
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :host %><br>
    <%= f.select :host, options_for_select(User.all.map{|u|[u.handle, u.id]}) %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>