<div class="row">
  <div class="col-md-12 text-center">
    <%= link_to 'Create Event', new_event_path, class: 'btn btn-primary', role: 'button' %>
  </div>
</div>

<% @events.each_slice(2) do |events| %>
<div class="row">
  <% events.each do |event| %>
  <div class="col-md-6">
    <%= render 'card_tile', event: event %>
  </div>
  <% end %>
</div>
<% end %>