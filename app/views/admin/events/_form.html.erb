<%= form_for @event, url: {controller: "events", action: "create"} do |f| %>

  <% if @event.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <strong><%= pluralize(@event.errors.count, "error") %></strong>
       prohibited this event from being saved:
    </div>
    <ul class="list-group">
      <% @event.errors.full_messages.each do |msg| %>
        <li class="list-group-item"><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :activity, class: 'control-label' %><br>
    <%= f.text_field :activity, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group form-inline">
    <%= f.label :datetime, class: 'control-label' %><br>
    <%= f.datetime_select :datetime, {}, {class: 'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.label :location, class: 'control-label' %><br>
    <%= f.text_field :location, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :description, class: 'control-label' %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :host, class: 'control-label' %><br>
    <%= f.select :host, options_for_select(User.all.map{|u|[u.handle, u.id]}), {}, {class: 'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>